<div class="container">
  <div class="row justify-content-center text-center">
    <div class="col md-6">
      <%= cl_image_tag(current_user.profile_picture.key, class: "profile-picture-my-profile") %>
      <h1><%= @user.first_name %> <%= @user.last_name %></h1>
      <p>Email: <%= @user.email %></p>
      <p>Riding since: <%= @user.created_at.strftime('%B %e, %Y') %></p>
      <%= link_to "Edit my profile", edit_user_registration_path %>
      <div class="mt-3">
        <%= link_to 'Back', trips_path, class:"btn btn-secondary"%>
      </div>
    </div>
  </div>
</div>
