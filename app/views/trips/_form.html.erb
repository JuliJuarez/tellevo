
<%= simple_form_for(@trip) do |f| %>
  <ul>
    <% if @trip.errors.any?%>
      <% @trip.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    <% end %>
  </ul>

  <div class="form-inputs">
    <%= f.input :starting_point,
                input_html: { data: { geocoder_target: "address" }, class: "d-none" },
                wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } }%>
    <%= f.input :end_point %>
    <%= f.input :departure_time %>
    <%= f.input :number_of_passengers %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class:"btn btn-success" %>
  </div>
<% end %>
